<% if vacancies.any? %>
    <table class="table table-stripped">
      <thead>
      <tr>
        <th>Название</th>
        <th>С</th>
        <th>По</th>
        <th>Зарплата</th>
        <% if control_actions %>
            <th colspan="2"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% vacancies.each do |vacancy| %>
          <tr>
            <td><%= link_to vacancy.name, vacancy %></td>
            <td><%= vacancy.start_date.strftime("%d.%m.%y") if vacancy.start_date %></td>
            <td><%= vacancy.end_date.strftime("%d.%m.%y") if vacancy.end_date %></td>
            <td><%= vacancy.salary %></td>
            <% if control_actions %>
                <td><%= link_to 'Изменить', edit_vacancy_path(vacancy) %></td>
                <td><%= link_to 'Удалить', vacancy, method: :delete, data: {confirm: 'Вы уверены?'} %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <p>Вакансий не найдено</p>
<% end %>