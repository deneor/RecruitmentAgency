<%= form_for(vacancy) do |f| %>
    <% if vacancy.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(vacancy.errors.count, "error") %> prohibited this vacancy from being saved:</h2>

          <ul>
            <% vacancy.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name, 'Название компании' %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :start_date, 'Дата начала действия вакансии' %>
      <%= f.datetime_select :start_date %>
    </div>

    <div class="field">
      <%= f.label :end_date, 'Дата окончания действия вакансии' %>
      <%= f.datetime_select :end_date %>
    </div>

    <div class="field">
      <%= f.label :salary, 'Зарплата' %>
      <%= f.text_field :salary %>
    </div>

    <div class="field">
      <%= f.label :phone_number, 'Номер телефона' %>
      <%= f.text_field :phone_number %>
    </div>

    <div class="field">
      <%= f.label :email, 'Адрес электронной почты' %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :skills_list, "Необходимые умения: (разделяйте их запятыми)" %><br/>
      <%= f.text_field :skills_list, data: {load: @vacancy.skills.map(&:attributes).to_json} %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить' %>
    </div>
<% end %>
