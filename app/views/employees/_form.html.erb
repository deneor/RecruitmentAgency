<%= form_for(employee) do |f| %>
    <% if employee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

          <ul>
            <% employee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name, 'Фамилия, Имя, Отчество' %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :status, 'Статус поиска (при заполнении: в поиске)' %>
      <%= f.check_box :status %>
    </div>

    <div class="field">
      <%= f.label :desired_salary, 'Желаемая зарплата' %>
      <%= f.text_field :desired_salary %>
    </div>

    <div class="form-group">
      <%= f.label :contact_info, 'Контактная информация' %>
    <div class="field">
      <%= f.label :phone_number, 'Номер телефона' %>
      <%= f.text_field :phone_number %>
    </div>

    <div class="field">
      <%= f.label :email, 'Адрес электронной почты' %>
      <%= f.text_field :email %>
    </div>
    </div>
    <div class="field">
      <%= f.label :skills_list, "Ваши умения: (разделяйте их запятыми)" %><br/>
      <%= f.text_field :skills_list, data: {load: @employee.skills.map(&:attributes).to_json} %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить' %>
    </div>
<% end %>
